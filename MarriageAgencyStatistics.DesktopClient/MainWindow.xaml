<Window x:Class="MarriageAgencyStatistics.DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarriageAgencyStatistics.DesktopClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="Малышка, выбери дату:" />
            <Calendar Height="245" VerticalAlignment="Top" SelectedDate="{Binding ChoosenDate}"/>
            <StackPanel DockPanel.Dock="Top" >
                <DockPanel>
                    <Button DockPanel.Dock="Right" Content="SAVE" Click="ButtonBase_OnClick"></Button>
                    <TextBox DockPanel.Dock="Left" Text="{Binding Path, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                </DockPanel>
                <Button Content="Поработать :)" Command="{Binding GenerateReport}"></Button>
            </StackPanel>

            <ListView DockPanel.Dock="Top" ItemsSource="{Binding Logs}">
                
            </ListView>

        </DockPanel>

    </Grid>
</Window>
